{% render 'partials/head.liquid' %}

<main>

<footer class="comment-section">
    <div class="comment-messages">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>

    <form class="comment-form" method="post" action="/chatten">
    <div class="input-container">
        <label>Naam:
            <input type="text" name="naam" required>
        </label>
        <label>Bericht:
            <input type="text" name="bericht" required>
        </label>
    </div>

    <button type="submit">Verzend</button>
</form>

</footer>
</main>




<style>
    
    
    body {
        background-color: #05083F;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        height: 100vh;
    }
    
    /* berichten container */
    .comment-messages {
        overflow-y: auto;
        padding: .6em;
        display: flex;
        flex-direction: column;
        overflow-anchor: auto;
        max-height: calc(100vh - 9em); /* berichten overlap fix */

        @media screen and (max-width: 700px) {
            max-height: calc(100vh - 7.8em); /* berichten overlap fix */
        }

        @media screen and (max-width: 470px) {
            max-height: calc(100vh - 10.6em); /* berichten overlap fix */
        }
    }
    
    /* berichten */
    .comment-messages p {
        background: #88E2C1;
        padding: .7em;
        border-radius: .4em;
        margin: .35em 0;
        font-size: .9em;
        word-wrap: break-word;
        overflow-wrap: break-word;
        max-width: 100%;
    }
    
    /* invoerveld + verzend button container */
    .comment-form {
        display: flex;
        flex-direction: column;
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100vw;
        /* height: 9em; */
        background: #9F7AEF;
        padding: .6em;
        align-items: center;
    }
    
    /* invoerveld container */
    .input-container {
        display: flex;
        gap: 1em;
        width: 100%;
        justify-content: center;
        gap: 3em;

        @media screen and (max-width: 470px) {
            flex-direction: column;
            align-items: center;
            gap: 0;
        }
    }
    
    /* invoervelden */
    .comment-form input {
        padding: .5em;
        margin-bottom: .5em;
        border: 1px solid #dddddd;
        border-radius: .4em;
        font-size: 1em;
        width: 100%;

        @media screen and (max-width: 700px) {
            width: 8em;
        }
    }
    
    /* verzend button */
    .comment-form button {
        background: #05083F;
        color: white;
        border: none;
        padding: .5em;
        border-radius: .4em;
        cursor: pointer;
        width: 100%;
        font-size: 1em;
        margin-top: .5em;
    }

    /* verzend button hover */
    .comment-form button:hover {
        background: #010114;
    }

</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let messageContainer = document.querySelector(".comment-messages");
    messageContainer.scrollTop = messageContainer.scrollHeight;
});
</script>

{% render 'partials/foot.liquid' %}