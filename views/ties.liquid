{% render 'partials/head.liquid' %}

<main>

<footer class="comment-section">
    <div class="comment-messages">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>

    <form class="comment-form" method="post" action="/ties">
    <div class="input-container">
        <label>Naam:
            <input type="text" name="naam" required>
        </label>
        <label>Text:
            <input type="text" name="bericht" required>
        </label>
    </div>

    <button type="submit">Verzend</button>
</form>

</footer>
</main>




<style>
    
    
    body {
        background-color: #05083F;
        font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    
    /* Message container with scrolling */
    .comment-messages {
        flex-grow: 1;
        overflow-y: auto;
        padding: .6em;
        display: flex;
        flex-direction: column;
        overflow-anchor: auto;
    }
    
    /* Makes sure long messages wrap */
    .comment-messages p {
        background: #88E2C1;
        padding: .7em;
        border-radius: .4em;
        margin: .35em 0;
        font-size: .9em;
        word-wrap: break-word;
        overflow-wrap: break-word;
        max-width: 100%;
    }
    
    /* Fixes the input form at the bottom of the screen */
    .comment-form {
        display: flex;
        flex-direction: column;
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100vw;
        background: #9F7AEF;
        padding: .6em;
        align-items: center;
    }
    
    .input-container {
        display: flex;
        gap: 1em; /* Adds space between the inputs */
        width: 100%;
        justify-content: center;
        gap: 3em;
    }
    
    /* Input field styling */
    .comment-form input {
        padding: .5em;
        margin-bottom: .5em;
        border: 1px solid #dddddd;
        border-radius: .4em;
        font-size: 1em;
        width: 100%;
    }
    
    /* Submit button */
    .comment-form button {
        background: #05083F;
        color: white;
        border: none;
        padding: .5em;
        margin-left: 2em;
        margin-right: 2em;
        border-radius: .4em;
        cursor: pointer;
        width: 100vw;
        font-size: 1em;
        margin-top: .5em;
    }

    
.comment-form button:hover {
    background: #080e80;
}

</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    let messageContainer = document.querySelector(".comment-messages");
    messageContainer.scrollTop = messageContainer.scrollHeight;
});
</script>

{% render 'partials/foot.liquid' %}